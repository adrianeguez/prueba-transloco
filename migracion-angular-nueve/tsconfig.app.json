{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./out-tsc/app",
    "types": [
      "node"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "strict": false
}
